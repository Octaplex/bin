#!/usr/bin/bash
source ~/.config/panel/config
#source ~/.config/colors/colors.sh

w=500
h=28
lines=7

dim=$(xdpyinfo | grep dimensions | sed -r 's/^[^0-9]*([0-9]+x[0-9]+).*$/\1/')
swidth=$(echo "$dim" | cut -dx -f1)
sheight=$(echo "$dim" | cut -dx -f2)

x=$((($swidth-$w)/2))
y=$((($sheight-$h*$lines)/2))

j4-dmenu-desktop --term=urxvt --dmenu="dmenu -dim 0.4 -i -h $h -w $w -x $x -l 7 -y $y -fn '$font_1' -nf '#839496' -sb '#268bd2' -sf '#ffffff' -o 0"
