#!/usr/bin/bash
source ~/.config/colors/colors.sh

vol=$(amixer get Master | tail -1 | cut -d ' ' -f 6 | tr -d '[%]')
width=40

hiw=$(($width*$vol/100))
unw=$(($width-$hiw))

hi="%{F#$orange}$(yes '─' | head -n $hiw | tr -d '\n')"
un="%{F#$gray}$(yes '─' | head -n $unw | tr -d '\n')"

pop "   $hi$un  "
