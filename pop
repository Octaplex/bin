#!/usr/bin/bash
source ~/.config/colors/colors.sh

pidfile="/tmp/pop-pid"

# kill any existing popups
test -e "$pidfile" && pkill -P $(cat "$pidfile")
echo $$ >"$pidfile"

(echo " $@"; sleep 2) | lemonbar -B "#$black00" -bdg 480x28+220+8 \
    -f 'Source Code Pro:size=8:style=Medium,Regular' -f 'Material Icons:size=11' \
    -n 'popup'
